%h1 Ya'll like product forms?
= form_for @product, :html => {:multipart => true}, :remote => true do |f|
  = f.text_field :name, :autofocus => 'true', :placeholder => 'Product name'
  = f.file_field :image, :placeholder => 'Image'
  = text_field_tag :tags, :placeholder => 'Product tags'
  = f.text_field :description, :placeholder => 'Description'
  = f.text_field :cost, :placeholder => 'Cost'
  = f.text_field :address, :placeholder => 'Address'
  = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'btn btn-danger')
  = f.submit 'Add Product', :class => 'btn btn-success'